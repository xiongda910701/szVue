.container
  width 100%
  height 8rem
  font-size 0.16rem
  position relative
  z-index 1
  margin-top 35px
  img
    width 100%
    height 8rem
  .title-box
    position absolute
    left 0.4rem
    top 1.82rem
    height 1.21rem
    p
      font-size 0.48rem
      font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
      font-weight 800
      color rgba(255,255,255,1)
      line-height 0.75rem
  .desc
    position absolute
    top 2.66rem
    left 0.4rem
    height 0.98rem
    font-size 0.24rem
    font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
    font-weight 500
    color rgba(255,255,255,1)
    line-height 0.36rem
  .btn-more
    position absolute
    text-align center
    top 4.5rem
    left 0.4rem
    width auto
    padding 0.2rem
    background rgba(255,255,255,1)
    border 2px solid rgba(255,255,255,1)
    border-radius:4px
    cursor pointer
    letter-spacing 0.08rem
    a
      display block
      width auto
      line-height 0.8rem
      span
        width 1.13rem
        height 0.23rem
        font-size 0.2rem
        font-family PingFang-SC-Medium
        font-weight 500
        color rgba(23,127,230,1)
      .icon-youjiantou
        display inline-block
        font-size 0.16rem
        color rgba(23,127,230,1)
        margin-left 0.15rem
        font-weight 700
