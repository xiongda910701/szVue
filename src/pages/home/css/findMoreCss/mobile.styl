.container
  width 100%
  height 7.14rem
  .content
    position relative
    display flex
    flex-wrap wrap
    justify-content center
    color white
    .banner
      position absolute
      top 0
      left 0
      width 100%
      height 7.14rem
      z-index -1
    .title
      text-align center
      width 100%
      font-size 16px
      font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
      font-weight 500
      margin-top 1rem
      overflow hidden
    .desc
      width 100%
      font-size 14px
      margin  0.39rem 0 0.47rem 0
      font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
      text-align center
      font-weight 500
    .list
      overflow hidden
      width 100%
      .item
        float left
        background-color #479AED
        color white
        width 33.3%
        height 2.4rem
        padding 0.6rem
        box-sizing border-box
        cursor pointer
        &:hover
          background-color #66b3ff
          border 1px solid #66b3ff
        .list-title
          height 0.6rem
          line-height 0.6rem
          font-size 0.18rem
          text-align left
          i
            font-size 0.24rem
            margin-right 0.1rem
            vertical-align middle
        .list-desc
          width 3.19rem
          font-size 0.14rem
          font-family PingFang-SC-Medium
          font-weight 500
          line-height 0.4rem
          text-align left
      .item-mid
        background-color #3891EB
