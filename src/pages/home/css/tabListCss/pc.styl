.container
  width 100%
  background-color white
  font-size 0.16rem

  .content
    margin 0 3.6rem 0 3.6rem
    padding-top 1.24rem
    padding-bottom 1rem

    .list
      overflow hidden
      width 12rem
      padding 0 1.4rem
      box-sizing border-box
      display flex
      justify-content center

      .item
        text-align center
        cursor pointer
        padding-bottom 0.2rem
        margin-right 0.7rem
        &:last-child
          margin-right 0
        &.active
          position relative
          p
            color #177FE6
          &:after
            position absolute
            content ''
            left 0.3rem
            bottom  0
            width 0.4rem
            height 0.04rem
            background-color #177FE6
            border-radius 2px
        i
          color #177FE6
          font-size 0.3rem
        p
          width 1rem
          font-size 0.24rem
          font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
          font-weight 500
          color rgba(71, 87, 102, 1)
          margin-top 0.13rem

    .item-slider-content
      width 100%
      height 7.2rem
      margin-top 0.4rem
      border 1px solid rgba(230, 230, 230, 1)
      box-shadow 0 4px 10px 0 rgba(240, 241, 245, 1)
      border-radius 3px
      background-color #fafbfc
      >>>.el-carousel
        width 100%
        height 7.2rem
        .el-carousel__container
          width 100%
          height 7.2rem
      .img-box
        width 100%
        height 6.4rem
        img
          width 100%
          height 6.4rem
      .desc
        height 0.8rem
        line-height 0.8rem
        font-size 0.2rem
        font-family PingFang-SC-Medium;
        font-weight 500
        color rgba(71, 87, 102, 1)
        text-align center
